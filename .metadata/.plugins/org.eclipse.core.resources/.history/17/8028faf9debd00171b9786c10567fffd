        JLabel lblNewLabel = new JLabel("\uC0C8\uB85C\uC6B4 \uB3D9\uC544\uB9AC \uD68C\uACC4 \uC194\uB8E8\uC158, \uB3D9\uC544\uB9AC \uD68C\uACC4 \uC7A5\uBD80");

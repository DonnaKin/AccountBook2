	 public void actionPerformed(ActionEvent e) {
		 if(e.getSource()==home){
			  dispose();
			  try {
				new Calender(id);
			} catch (IOException e1) {
				// TODO Auto-generated catch block
				e1.printStackTrace();
			}
		  }else if(e.getSource()==calculator){
			  dispose();
			  new Calculator(id);
		  }else if(e.getSource()==mypage){
			  dispose();
			  new UserInfo_gui(id);
		  }else if(e.getSource()==add){
			  new Recall_Input(id);
		  }
	 }
	 
